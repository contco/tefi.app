{
  "noImplicitAny": false,
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@terra-utilities/*": ["packages/terra-utilities/*"],
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "components/Asset/dummy.js", "components/MirrorBorrowing", "packages/terra-utilities/*.ts"],
  "exclude": ["node_modules"]
}
